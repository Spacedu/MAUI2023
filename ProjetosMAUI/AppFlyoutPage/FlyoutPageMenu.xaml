            xmlns:pages="clr-namespace:AppFlyoutPage"
            x:Class="AppFlyoutPage.FlyoutPageMenu"
            Title="FlyoutPageMenu">
    <FlyoutPage.Flyout>
        <!-- Página de Menu-->
        <pages:Menu />
    </FlyoutPage.Flyout>
    <FlyoutPage.Detail>
        <!-- Página de conteúdo central-->

        <NavigationPage>
            <x:Arguments>
                <pages:Page1 />
            </x:Arguments>
        </NavigationPage>
        
    </FlyoutPage.Detail>
</FlyoutPage>