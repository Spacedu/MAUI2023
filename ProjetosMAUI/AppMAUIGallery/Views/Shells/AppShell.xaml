    <Shell.ItemTemplate>
        <DataTemplate>
            <Grid Padding="10,0" ColumnDefinitions="*, 40">
                <Label
                    Text="{Binding Title}"
                    TextColor="Black"
                    VerticalOptions="Center" />
                <Image
                    Grid.Column="1"
                    Margin="5"
                    Source="{Binding Icon}" />
            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>
    <Shell.MenuItemTemplate>
        <DataTemplate>
            <Grid Padding="10,0" ColumnDefinitions="*, 40">
                <Label
                    Text="{Binding Title}"
                    TextColor="Black"
                    VerticalOptions="Center" />
                <Image
                    Grid.Column="1"
                    Margin="5"
                    Source="{Binding Icon}" />
            </Grid>
        </DataTemplate>
    </Shell.MenuItemTemplate>
    <Shell.FlyoutHeader>
        <StackLayout Padding="20">
            <Image HeightRequest="70" Source="clock.png" />
            <Label
                FontSize="10"
                HorizontalOptions="Center"
                Text="Elias Ribeiro"
                TextColor="Black" />
            <Label
                FontSize="8"
                HorizontalOptions="Center"
                Text="elias@gmail.com" />
        </StackLayout>
    </Shell.FlyoutHeader>

    <!--
    <Shell.FlyoutContent>
        <Label Text="Conteúdo" />
    </Shell.FlyoutContent>
    -->
    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">

        <ShellContent
            Title="Página 01"
            ContentTemplate="{DataTemplate pages:Page01}"
            Icon="one.png"
            Route="page01" />
        <ShellContent
            Title="Página 02"
            ContentTemplate="{DataTemplate pages:Page02}"
            Icon="two.png"
            Route="page02" />
        <ShellContent
            Title="Página 03"
            ContentTemplate="{DataTemplate pages:Page03}"
            Icon="three.png"
            Route="page03" />

        <!--
            cadastro/passo1
            cadastro/passo2
        -->
        <Tab
            Title="4 e 5"
            Icon="four.png"
            Route="cadastro">
            <ShellContent
                Title="Page04"
                Icon="four.png"
                Route="passo1"
                Shell.TabBarIsVisible="False">
                <pages:Page04 />
            </ShellContent>

            <ShellContent
                Title="Page05"
                Icon="five.png"
                Route="passo2">
                <pages:Page05 />
            </ShellContent>
        </Tab>

    </FlyoutItem>
    <MenuItem IconImageSource="five.png" Text="Menu Item" />

    <Shell.FlyoutFooter>
        <Label
            Padding="10"
            FontSize="8"
            Text="Versão: 1.0.0" />
    </Shell.FlyoutFooter>

