<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMAUIGallery.Views.Utils.BehaviorPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="clr-namespace:AppMAUIGallery.Views.Utils.Behaviors"
    Title="BehaviorPage">
    <VerticalStackLayout Padding="20">
        <Entry Placeholder="Digite o e-mail nacional">
            <Entry.Behaviors>
                <behaviors:EmailValidationBehavior />
            </Entry.Behaviors>
        </Entry>
        <Entry Placeholder="Digite sua idade">
            <Entry.Behaviors>
                <behaviors:AgeValidationBehavior />
            </Entry.Behaviors>
        </Entry>
    </VerticalStackLayout>
</ContentPage>